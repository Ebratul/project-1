#include<bits/stdc++.h>
using namespace std;
vector<int>p(10,0);
int main()
{
    int n;
    cin>>n;
    vector<pair<int,int>>v;
    for(int i=0;i<n;i++)
    {
        int w,d;
        cin>>w>>d;
        v.push_back({w,d});
    }
//    sort(v.begin(),v.end());
    int cost=0;
    for(auto vt:v)
    {
        int w=vt.first;
        int d=vt.second;
        for(int j=d;j>0;j--)
        {
            if(p[j]==0)
            {
             cost+=w;
             p[j]=1;
             break;
            }
        }
    }
    cout<<cost<<endl;
}

/*
7
35 3
30 4
25 4
20 2
15 3
12 1
5 2

ans:
110
*/
